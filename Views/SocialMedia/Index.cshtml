@using WebApplication3.Models.Entity
@model List<TblSocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">MY SOCIAL MEDIA LIST</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Add Social Media</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Name</th>
                                            <th>State</th>
                                            <th>UPDATE</th>
                                            <th>DELETE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {

                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Name</td>
                                                @if (x.State == true)
                                                {
                                                    <td>Active</td>
                                                }
                                                else
                                                {
                                                    <td>Passive</td>
                                                }
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SocialMedia/Update/@x.ID">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        UPDATE
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/SocialMedia/Delete/@x.ID">
                                                        <i class="fas fa-trash"></i>
                                                        DELETE
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Add Social Media Page</h2>
                    </div>,
                    <form method="post" action="/SocialMedia/Add">
                        <div class="modal-body">
                            <label>Name Social Media</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Link Social Media</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>Icon Social Media</label>
                            <input type="text" name="icon" class="form-control" />
                            <br />
                            <button class="btn btn-info">ADD</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>

